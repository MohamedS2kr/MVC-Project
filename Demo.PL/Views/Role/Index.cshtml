@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a  asp-action="Create" class="btn btn-primary">Add New Role</a>
<br />
<br />
@if (Model.Count() > 0)
{
    <form asp-action="Index" class="row col-8">
        <br />
        <div>
            <input type="text" class="form-control" name="SearchInput" id="SearchInput" placeholder="Role`s Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>

    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.RoleName)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>

                    <partial Name="_ButtonsPartialView" model="@Role.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h1>There Is No Role</h1>
    </div>
}

